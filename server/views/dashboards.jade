    script(type="text/javascript" src="/app/directives/fbTodo.js")


  body(ng-app="flair")
    div#wrapper(ng-controller="flair.navigation")
      nav.navbar-default.navbar-static-side(role="navigation")
        div.sidebar-collapse
          ul#side-menu.nav
            li.nav-header
              dv.dropdown.profile-element
                span
                  img.img-circle(alt="image" src="/images/brock.jpg")
                a.dropdown-toggle(data-toggle="dropdown" href="")
                  span.clear
                    span.block.m-t-xs
                      strong.font-bold=name
                    span.text-muted.text-xs.block Profile
                      b.caret
                ul.dropdown-menu.animated.fadeInRight.m-t-xs
                 li
                   a(href="") Edit
                  li.divider
                  li
                    a(href="/account/logout") Logout
              div.logo-element +FB
            li.active
              a(href="")
                i.fa.fa-th-large
                span.nav-label My Boards
                span.fa.arrow
              ul.nav.nav-second-level.collapse.in
                li(ng-repeat="board in boards").ng-cloak
                  a(style="margin-right: 40px" ng-href="dashboards#/board/{{board._id}}") {{board.label}}
                  div.dropdown(style="float: right; margin-right: 10px;top:-23px")
                    span.glyphicon.glyphicon-cog.dropdown-toggle(data-toggle="dropdown")
                    ul.dropdown-menu
                     li
                       a(ng-click="editBoard(board)") Edit
                     li
                       a(href="") Copy
                     li
                       a(ng-click="deleteBoard(board)") Delete
                li
                 a.glyphicon.glyphicon-plus(ng-click="newBoard()")
      div#page-wrapper.gray-bg
        div.row.border-bottom
          nav.navbar.navbar-static-top(role="navigation" style="margin-bottom: 0")
            div.navbar-header
              a.navbar-minimalize.minimalize-styl-2.btn.btn-primary
                i.fa.fa-bars
              form(role="search" class="navbar-form-custom" method="post" action="")
                div.form-group
                  input#top-search.form-control(type="text" placeholder="Search for something..." name="top-search")
            ul.nav.navbar-top-links.navbar-right
              li
                a(href="/account/logout")
                  i.fa.fa-sign-out
                  span Log out
        div(ng-view)





