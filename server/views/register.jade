extends accountLayout

block content
  h3 Welcome to FlairBoard
  p Create account to see it in action.
  form(action="/account/register" class="m-t" method="post" role="form")
    div.form-group
      input(class="form-control" data-val="true" data-val-length="The Name cannot be more than 20 characters long." data-val-length-max="20" data-val-required="The Name field is required." id="name" name="name" placeholder="Name" required="" type="text" )
    div.form-group
      input(class="form-control" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="username" name="username" placeholder="Email" required="" type="text")
    div.form-group
      input(class="form-control" data-val="true" data-val-length="The Password must be at least 6 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="The Password field is required." id="password" name="password" placeholder="Password" required="" type="password")
    div.form-group
      input(class="input-validation-error form-control" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required="" type="password")
    p
      span.field-validation-error=message
    button(type="submit" class="btn btn-primary block full-width m-b") Register
    p.text-muted.text-center
      small Already have an account?
    a(class="btn btn-sm btn-white btn-block" href="/account/login") Login
