div.ibox(style="height: 100%; padding-top: 48px;")
    div.ibox-title(style="margin-top:-48px")
        h5 Mind Map
        div.ibox-tools
            a.dropdown-toggle(data-toggle="dropdown" href="" aria-expanded="false")
                i.fa.fa-question
            ul.dropdown-menu.dropdown-user
                div(style="padding: 5px")
                    h3 Mind Map Help
                    p Mouse over a node to change it
                    p
                        span Click&nbsp
                        i.glyphicon.glyphicon-remove
                        span &nbspto delete node and all children.
                    p
                        span Drag&nbsp
                        i.glyphicon.glyphicon-certificate
                        span &nbspto create new node.
                    p Double click to edit and drag to move
             a.close-link(ng-click="remove({item : MindMap})")
                    i.fa.fa-times
    div.ibox-content(style="height: 100%;position: static")
       div(id="mindmap" style="overflow: auto; height: 100%; position: relative")
           div(ng-repeat="rootnode in mindMapRootNodes" service="mindMapNodeService" node="rootnode" fb-mind-map-node)

